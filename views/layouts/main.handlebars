<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    
    {{! Google fonts link }}
    <link
      href='https://fonts.googleapis.com/css2?family=Comforter+Brush&family=Montserrat:wght@300&family=Quicksand:wght@600&display=swap'
      rel='stylesheet'
    />
    {{! title for the browser tab }}
    <title>Bike Haven</title>
    {{! bootstrap link and javascript cdn}}
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>
    {{! stylesheets link  }}
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  

<body>
  {{! Navbar collapse }}
  <nav class='navbar navbar-expand-lg navbar-light bg-light'>
    <div class='container-fluid'>
      {{! Main title of the site }}
      <a class='navbar-brand fix-top' href='/'>Bike Haven</a>
      <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavDropdown'
        aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation'>
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarNavDropdown'>
               <embed class="floatRight" src="https://arslan-razi.github.io/moving-bike/" style="width:200px; height: 180px; overflow: hidden; background-color : transparent;">

        <ul class='navbar-nav' role='navigation'>
          <li class='nav-item'>
            <a class='nav-link active' aria-current='page' href='/wishlist'>Wishlist</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link' href='/bikes'>Bikes</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link' href='/customize'>Customize</a>
          </li>
          <li class='nav-item dropdown'>
            <a class='nav-link dropdown-toggle' href='#' id='navbarDropdownMenuLink' role='button'
              data-bs-toggle='dropdown' aria-current='true' aria-expanded='false'>
              Settings
            </a>
            <ul class='dropdown-menu' aria-labelledby='navbarDropdownMenuLink'>
              {{#if loggedIn}}
                <li><a class='dropdown-item' href='/logout'>Logout</a></li>
                <li>
                  <button type='button' class='btn' data-bs-toggle='modal' data-bs-target='#profile-modal'>
                    Profile
                  </button>
                </li>

              {{else}}
                <li><a class='dropdown-item' href='/login'>Login</a></li>
              {{/if}}

            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  {{#if loggedIn}}
    {{>profile-modal current_user}}
  {{/if}}

  {{! body for the browser }}
  <main>
    {{{body}}}
  </main>

  {{! footer }}
  <footer class='text-center'>
    {{! Contact information }}
    <div class='icons'>
      <a href='tel:123-4567-890'><i class='icon fas fa-phone-square-alt fa-2x'></i></a>
      <a href='mailto:bikehaven@gmail.com'><i class='icon fas fa-envelope fa-2x'></i></a>
      <a href='#'><i class='icon fab fa-facebook fa-2x'></i></a>

      </div>
      <p>Â©Copyright 2022, Made by Awesome <i class="icon-terminal fas fa-terminal "></i>Coders</p>
    </footer>

    
    {{! jquery }}
    <script
      src='https://code.jquery.com/jquery-3.6.0.min.js'
      integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4='
      crossorigin='anonymous'
      type='text/javascript'
    ></script>
  </body>

</html>