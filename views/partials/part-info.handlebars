<div class='bike-card p-0 m-1'>
  <div id='bike_id'>
    {{#if this}}
      <div
        class='text-white btn-block bg-dark d-flex flex-row justify-content-between p-2'
        id='est_title'
      >
        <div class='d-flex align-items-center'>
          <span>{{type}}</span>
        </div>
        <i
          class='heart-icon fas fa-heart fa-2x wishlist-icon'
          data-id='{{id}}'
        ></i>
      </div>

      <img
        src='/images/customize/{{filename}}'
        class='img-thumbnail img img-responsive'
      />
    {{/if}}
  </div>
</div>