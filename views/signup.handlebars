<div class="column">
    <h2 class="title pb-4">Create new Account</h2>
    <form action="signup-form">
        <div>
            <label for="username-signup">username:</label>
            <input type="text" placeholder="Enter username" id="user-signup" />
        </div>
        <div>
            <label for="email-signup">email:</label>
            <input type="text" placeholder="Enter email" id="email-signup" />
        </div>

        <div>
            <label for="password-signup" placeholder="Enter password">password:</label>
            <input type="password" id="password-signup" />
        </div>
        <div>
            <button type="submit" class="btn btn-lg btn-outline-dark">signup</button>
        </div>
    </form>
</div>

<script src="/javascript/signup.js"></script>